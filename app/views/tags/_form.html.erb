<div id="create-new-tag">
  <h4>Or create a new tag:</h4>
  <%= form_with(model: tag, local: true) do |form| %>
    <% if tag.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(tag.errors.count, "error") %> prohibited this tag from being saved:</h2>

        <ul>
        <% tag.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field">
      <%= form.text_field :tag %>
      <%= form.hidden_field :bookmark_id, value: params[:id] %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>
